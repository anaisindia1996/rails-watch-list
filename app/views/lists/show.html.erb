<h1><%= @list.name %></h1>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.comment %></li>
    <li><%= bookmark.movie.title %></li>
    <li><%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
  <% end %>
</ul>

<p><%= link_to "Back to home", lists_path %></p>
<p><%= link_to "Create a bookmark", new_list_bookmark_path(@list) %></p>
